
import commands
OS = commands.getoutput('uname')

CCFLAGS = '-DFLAT_GUI '
LIBS=['SDL'],
LIBPATH=[]
CPPPATH=[]

if 'debug' in ARGUMENTS:
	CCFLAGS += '-g -ggdb '

if OS=='Cygwin':
	CCFLAGS += '-DCYGWIN '
	LIBPATH += ['../libdeps/SDL-1.2.11/build/.libs']
	CPPPATH += ['../libdeps/SDL-1.2.11/include']

if OS=='Linux':
	CPPPATH += ['/usr/include/SDL']

StaticLibrary('scrobui', ['scrobui.cpp', 'toolkit.cpp', 'dotum10.cpp'],
			  LIBS=LIBS, LIBPATH=LIBPATH, CPPPATH=CPPPATH, CCFLAGS=CCFLAGS)
